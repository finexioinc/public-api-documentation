            "enum" : [ "in-progress", "sent", "complete", "failed" ],
            "type" : "string",
            "readOnly" : true,
            "description" : "Current payment status"
          },
          "status_detail" : {
            "type" : "object",
            "readOnly" : true,
            "description" : "Additional information regarding current status expressed as key-value pairs."
          },
          "status_history" : {
            "type" : "string",
            "readOnly" : true,
            "description" : "List of objects that show status history for this payment:  [{'datetime': dt, 'status': status, 'status_detail: detail, ...]"
