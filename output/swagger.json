          "instrument_number" : {
            "type" : "string",
            "readOnly" : true,
            "description" : "Used to reference this payment when communicating with Finexio's Customer Support and Payment Operations teams."
          },
          "installments" : {
            "type" : "array",
            "items" : {
              "type" : "object",
              "properties" : {
                "id" : {
                  "type" : "string",
                  "readOnly" : true
                },
                "created" : {
                  "type" : "string",
                  "format" : "date-time",
                  "readOnly" : true
                },
                "updated" : {
                  "type" : "string",
